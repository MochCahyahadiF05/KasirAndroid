<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_product">

    <fragment
        android:id="@+id/navigation_product"
        android:name="com.example.kasirberas.ui.product.ProductFragment"
        android:label="Produk"
        tools:layout="@layout/fragment_product" />
    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.example.kasirberas.ui.cart.CartFragment"
        android:label="Keranjang"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/navigation_transaction"
        android:name="com.example.kasirberas.ui.transaction.TransactionFragment"
        android:label="Transaksi"
        tools:layout="@layout/fragment_transaction" />
    <fragment
        android:id="@+id/navigation_expense"
        android:name="com.example.kasirberas.ui.expense.ExpenseFragment"
        android:label="Pengeluaran"
        tools:layout="@layout/fragment_expense" />

</navigation>